
{{#partial "content"}}
    <section class="sqd">
        <div class="row">
            <div class="col-md-2">
                </div>
            <div class="col-md-4 ">
                <a class="btns" href="/squad-form" style="font-size:25px;">Create Your Squad</a>
                <div class="card m-2">-
            <div id="newMember">
                {{#each heroes}}
                    <div class="hero-item">
                        <div class="hero-infor">
                            <p>Name: {{name}}</p>
                            <p>Super power: {{ power }}</p>
                            <a class="btns" href="/squad/new/{{id}}">Add To Squad</a>

                        </div>
                        </div>
                {{/each}}
            </div>
                </div>
            </div>
            <div class="col-md-4">
            {{#if squads}}
               <h2> Squade availabl</h2>
                {{#each squads}}
                    <div class="card m-2">
                            <h1>{{ squadName }} </h1>
                            <p>Id: {{squadId}}</p>
                            <p>Purpose: {{cause}}</p>
                            <p>Max participants: {{ size }}</p>
                            <br><br>
                           <button class="addMember add-btn" >Add New Member</button>
                            {{#each squadMembers}}
                                <div>
                                    <h5>Name: {{this.name}}</h5>
                                    <h5>Power: {{power}}</h5>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <h2>Please create a squad to continue</h2>
            {{/if}}
        </div>
        </div>
    </section>
{{/partial}}
{{#partial "footer"}}
    <script type="text/javascript" src="/js/jquery-3.4.0.min.js"></script>
    <script type="text/javascript" src="/js/script.js"></script>
{{/partial}}
{{> layout.hbs}}
