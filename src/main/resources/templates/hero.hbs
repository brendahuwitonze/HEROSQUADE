{{#partial "content"}}
    <section style="background-color:rgb(217, 217, 217);">
        <div class="row">
               <h2 style="text-align:center;"class="h2cla"> <a class="btns" href="/hero-form" >Create Your Hero</a><br><br> CURRENT HEROES</h2>
        </div>
        <div class="row" >
            {{#each hero}}
                <div class="col-md-4"style="padding-bottom:40px;">
               <div class="card m-2">
                    <p>Name: {{ name }} </p>
                    <p>Age: {{ age }}</p>
                    <p>Hero's power: {{ power }}</p>
                    <p>Hero's Weakness: {{ weakness }}</p>
                    <p>Id: {{ id }}</p>
                    <a href="/squad" class="btns">Add {{ name }} To Squad</a>
                </div>
            </div>
            {{/each}}

        </div>
    </section>
{{/partial}}
{{> layout.hbs}}